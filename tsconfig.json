{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "jest"],
    "noImplicitAny": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/*",
    "jest.config.js",
    "jest.config.ts"
  ]
}
